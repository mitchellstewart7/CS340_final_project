
  <body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home Page</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/items">Items</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/customers">Customers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employees">Employees</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/titles">Titles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/departments">Departments</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/itemOrders">ItemOrders</a>
              </li>
            </ul>
          </nav>
    </header>
    <main>
        <div class="title">
          <h1 class="entity-title">Items and Orders</h1>
        </div>
        <div class="page-content">
          <div class="create-filter">
            <form class="form-section" id="itemOrders-form" action="/itemOrders" method="post">

              <div class="label-section">
                <label for="orderID">Order ID:</label>
                <input type="number" id="itemord-order-id" name="orderID">
              </div>

              <div class="label-section">
                <label for="itemID">Item ID:</label>
                <input type="number" id="itemord-item-id" name="itemID">
              </div>
              
            </form>

            <div id="modal-backdrop" class="hidden"></div>
            <div id="update-modal" class="hidden">
              <form class="form-section" id="itemOrders-update-form">
                <div class="label-section">
                    <label for="orderID">Order ID:</label>
                    <input type="number" id="update-itemord-order-id" name="orderID">
                </div>

                <div class="label-section">
                    <label for="itemID">Item ID:</label>
                    <input type="number" id="update-itemord-item-id" name="itemID">
                </div>

                <input type="submit" value="Submit" id="modal-submit"/>

              </form>
            </div>

            <div class="create-filter-buttons">
              <button type="submit" form="itemOrders-form" onclick="itemOrdersAlert()" id="itemOrders-create-button" class="create-button">Create Entry</button>
              <button id="itemOrders-filter-button" class="filter-button">Filter Table</button>
            </div>
          </div>
        </div>
        <div class="table-section">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Item ID</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              {{#each itemOrders}}
              <tr>
                <th scope="row">{{orderID}}</th>
                <td>{{itemID}}</td>
                <td><button onclick="toggleItemOrdersModal('{{orderID}}', '{{itemID}}')" id="update-button">Update</button></td>
                <td><button onclick="deleteItemOrder({{orderID}},{{itemID}})" id="delete-button">Delete</button></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
    </main>
  </body>

