<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Price Mart Items</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://web.engr.oregonstate.edu/~stewamit/CS340/CS340_final_project/style.css">
    <script src="https://web.engr.oregonstate.edu/~stewamit/CS340/CS340_final_project/script.js" charset="utf-8" defer></script>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home Page</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/items">Items</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/customers">Customers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employees">Employees</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/titles">Titles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/departments">Departments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/itemOrders">ItemOrders</a>
              </li>
            </ul>
          </nav>
    </header>
    <main>
        <div class="title">
            <h1 class="entity-title">Items</h1>
        </div>

        <div class="page-content">
          <div class="create-filter">
            <form class="form-section">
              <div class="label-section">
                <label for="itemID">Item ID:</label>
                <input type="number" id="item-item-id" name="itemID">
              </div>
              
              <div class="label-section">
                <label for="itemName">Item Name:</label>
                <input type="text" id="itemName" name="itemName">
              </div>

              <div class="label-section">
                <label for="departmentNumber">Department Number</label>
                <select id="departmentNumber" name="departmentNumber">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                  <option>6</option>
                  <option>7</option>
                  <option>8</option>
                  <option>9</option>
                  <option>10</option>
                  <option>11</option>
                  <option>12</option>
                  <option>13</option>
                </select>
              </div>
              
              <div class="label-section">
                <label for="numberInStock">Number In Stock:</label>
                <input type="number" id="numberInStock" name="numberInStock">
              </div>

              <div class="label-section">
                <label for="optimalStock">Optimal Stock:</label>
                <input type="number" id="optimalStock" name="optimalStock">
              </div>
              
              <div class="label-section">
                <label for="price">Price:</label>
                <input type="number" step="0.01" id="price" name="price">
              </div>
            </form>
            <div class="create-filter-buttons">
              <button id="create-button">Create Entry</button>
              <button id="filter-button">Filter Table</button>
            </div>
          </div>
        </div>
        <div class="table-section">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Item ID</th>
                <th scope="col">Item Name</th>
                <th scope="col">Department Number</th>
                <th scope="col">Number In Stock</th>
                <th scope="col">Optimal Stock</th>
                <th scope="col">Price</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              {{#each items}}
              <tr>
                <th scope="row">{{itemID}}</th>
                <td>{{itemName}}</td>
                <td>{{departmentNumber}}</td>
                <td>{{numberInStock}}</td>
                <td>{{optimalStock}}</td>
                <td>{{price}}</td>
                <td><button id="update-button">Update</button></td>
                <td><button id="delete-button">Delete</button></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
    </main>
  </body>
</html>
