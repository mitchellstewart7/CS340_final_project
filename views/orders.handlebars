<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Price Mart Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://web.engr.oregonstate.edu/~stewamit/CS340/CS340_final_project/style.css">
    <script src="https://web.engr.oregonstate.edu/~stewamit/CS340/CS340_final_project/script.js" charset="utf-8" defer></script>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home Page</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/items">Items</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/customers">Customers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employees">Employees</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/titles">Titles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/departments">Departments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/itemOrders">ItemOrders</a>
              </li>
            </ul>
          </nav>
    </header>
    <main>
      <div class="title">
        <h1 class="entity-title">Orders</h1>
      </div>
      <div class="page-content">
        <div class="create-filter">
          <form class="form-section">

            <div class="label-section">
              <label for="orderID">Order ID:</label>
              <input type="number" id="ord-order-id" name="orderID">
            </div>

            <div class="label-section">
              <label for="customerID">Customer ID:</label>
              <input type="number" id="ord-customer-id" name="customerID">
            </div>

            <div class="label-section">
              <label for="employeeID">Employee ID:</label>
              <input type="number" id="ord-employee-id" name="employeeID">
            </div>

            <div class="label-section">
              <label for="orderDate">Order Date:</label>
              <input type="date" id="order-date" name="orderDate">
            </div>
            
            <div class="label-section">
              <label for="totalPrice">Total Price:</label>
              <input type="number" step="0.01" id="total-price" name="totalPrice">
            </div>

          </form>
          <div class="create-filter-buttons">
            <button id="create-button">Create Entry</button>
            <button id="filter-button">Filter Table</button>
          </div>
        </div>
      </div>
      <div class="table-section">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Order ID</th>
              <th scope="col">Customer ID</th>
              <th scope="col">Employee ID</th>
              <th scope="col">Order Date</th>
              <th scope="col">Total Price</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
            <tr>
              <th scope="row">{{orderID}}</th>
              <td>{{customerID}}</td>
              <td>{{employeeID}}</td>
              <td>{{orderDate}}</td>
              <td>{{totalPrice}}</td>
              <td><button id="update-button">Update</button></td>
              <td><button id="delete-button">Delete</button></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
