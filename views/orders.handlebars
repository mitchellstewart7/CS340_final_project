
  <body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home Page</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/items">Items</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/customers">Customers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employees">Employees</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/titles">Titles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/departments">Departments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/itemOrders">ItemOrders</a>
              </li>
            </ul>
          </nav>
    </header>
    <main>
      <div class="title">
        <h1 class="entity-title">Orders</h1>
      </div>
      <div class="page-content">
        <div class="create-filter">
          <form class="form-section" id="orders-form" action="/orders" method="post">

            <div class="label-section">
              <label for="orderID">Order ID:</label>
              <input type="number" id="ord-order-id" class="order-input" name="orderID">
            </div>

            <div class="label-section">
              <label for="customerID">Customer ID:</label>
              <select id="ord-customer-id" class="order-input" name="customerID">
                <option>Any</option>
                {{#each customers}}
                  <option>{{customerID}}</option>
                {{/each}}
              </select>
            </div>

            <div class="label-section">
              <label for="employeeID">Employee ID:</label>
              <select id="ord-employee-id" class="order-input" name="employeeID">
                <option>Any/NULL</option>
                {{#each employees}}
                  <option>{{employeeID}}</option>
                {{/each}}
              </select>
            </div>

            <div class="label-section">
              <label for="orderDate">Order Date:</label>
              <input type="date" id="order-date" class="order-input" name="orderDate">
            </div>
            
            <div class="label-section">
              <label for="totalPrice">Total Price:</label>
              <input type="number" step="0.01" id="total-price" class="order-input" name="totalPrice">
            </div>

          </form>
          <div id="modal-backdrop" class="hidden"></div>
          <div id="update-modal" class="hidden">
              <form class="form-section" id="orders-update-form">
                <div class="label-section">
                    <label for="customerID">Customer ID:</label>
                    <select id="update-ord-customer-id" class="order-input" name="customerID">
                      {{#each customers}}
                        <option>{{customerID}}</option>
                      {{/each}}
                    </select>
                </div>

                <div class="label-section">
                    <label for="employeeID">Employee ID:</label>
                    <select id="update-ord-employee-id" class="order-input" name="employeeID">
                      <option>None</option>
                      {{#each employees}}
                        <option>{{employeeID}}</option>
                      {{/each}}
                    </select>
                </div>

                <div class="label-section">
                    <label for="orderDate">Order Date:</label>
                    <input type="date" id="update-order-date" class="order-input" name="orderDate">
                </div>
            
                <div class="label-section">
                    <label for="totalPrice">Total Price:</label>
                    <input type="number" step="0.01" id="update-total-price" class="order-input" name="totalPrice">
                </div>

                <input type="submit" value="Submit" id="modal-submit"/>

            </form>
          </div>

          <div class="create-filter-buttons">
            <button type="submit" form="orders-form" onclick="ordersAlert()" id="orders-create-button" class="create-button">Create Entry</button>
            <button onclick="searchOrders()" id="orders-filter-button" class="filter-button">Filter Table</button>
          </div>
        </div>
      </div>
      <div class="table-section">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Order ID</th>
              <th scope="col">Customer ID</th>
              <th scope="col">Employee ID</th>
              <th scope="col">Order Date</th>
              <th scope="col">Total Price</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
            <tr>
              <th scope="row">{{orderID}}</th>
              <td>{{customerID}}</td>
              <td>{{employeeID}}</td>
              <td>{{orderDate}}</td>
              <td>{{totalPrice}}</td>
              <td><button onclick="toggleOrdersModal({{orderID}}, '{{customerID}}', '{{employeeID}}', '{{orderDate}}', '{{totalPrice}}')" id="update-button">Update</button></td>
              <td><button onclick="deleteOrder({{orderID}})" id="delete-button">Delete</button></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </main>
