
  <body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home Page</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/items">Items</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/customers">Customers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employees">Employees</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/titles">Titles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/departments">Departments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/itemOrders">ItemOrders</a>
              </li>
            </ul>
          </nav>
    </header>
    <main>
      <div class="title">
        <h1 class="entity-title">Titles</h1>
      </div>
      <div class="page-content">
        <div class="create-filter">
          <form class="form-section" id="titles-form" action="/titles" method="post">
            <div class="label-section">
              <label for="title">Title:</label>
              <input type="text" id="title-title" name="title">
            </div>
            
            <div class="label-section">
              <label for="payScale">Pay Scale:</label>
              <input type="number" step="0.01" id="pay-scale" name="payScale">
            </div>

          </form>

          <div id="modal-backdrop" class="hidden"></div>
          <div id="update-modal" class="hidden">
              <form class="form-section" id="titles-update-form">
            
                <div class="label-section">
                    <label for="payScale">Pay Scale:</label>
                    <input type="number" step="0.01" id="update-pay-scale" name="payScale">
                </div>

                <input type="submit" value="Submit" id="modal-submit"/>

            </form>
          </div>

          <div class="create-filter-buttons">
            <button type="submit" form="titles-form" onclick="titlesAlert()" id="titles-create-button" class="create-button">Create Entry</button>
            <button onclick="searchTitles()" id="titles-filter-button" class="filter-button">Filter Table</button>
          </div>
        </div>
      </div>
      <div class="table-section">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Pay Scale</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each titles}}
            <tr>
              <th scope="row">{{title}}</th>
              <td>{{payScale}}</td>
              <td><button onclick="toggleTitlesModal('{{title}}', '{{payScale}}')" id="update-button">Update</button></td>
              <td><button onclick="deleteTitle('{{title}}')" id="delete-button">Delete</button></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </main>
  </body>
